
<templates>
  <div t-name="Sprite" class="sprite">
    <t t-esc="props.line.line"/>
	<span t-foreach="state.cols" t-as="col" t-key="col_index" t-raw="col" />
  </div>

  <div t-name="Anim" class="greeter">
	 <t t-foreach="props.lines" t-as="sprite" t-key="sprite_index">
          <Sprite line="sprite"/>
	</t>
  </div>

  <t t-name="Root">
	 <t t-foreach="env.anims" t-as="anim" t-key="anim.name">
          <Anim name="anim.name" lines="anim.data" />
	</t>
  </t>
</templates>
